<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CVManagementApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CVManagement"
        tools:targetApi="31">
        <activity
            android:name="com.albertomier.cv_management.splash.ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.albertomier.cv_management.main.view.MainActivity" />
        <activity android:name="com.albertomier.cv_management.login.ui.view.LoginActivity" />
        <activity android:name="com.albertomier.cv_management.company.ui.view.AddCompanyActivity" />
        <activity android:name="com.albertomier.cv_management.company.ui.view.CompanyDetailActivity" />
        <activity android:name="com.albertomier.cv_management.profile.ui.view.ProfileActivity" />
    </application>

</manifest>